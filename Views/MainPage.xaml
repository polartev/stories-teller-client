<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Story_Teller.ViewModels"
             xmlns:local="clr-namespace:Story_Teller"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="Story_Teller.Views.MainPage"
             x:DataType="vm:MainViewModel"
             BindingContext="{x:Static local:App.MainViewModel}">
    <ScrollView>
        <VerticalStackLayout Margin="50,40" Spacing="12">
            <Border StrokeShape="RoundRectangle 10">
                <toolkit:CameraView x:Name="Camera" MediaCaptured="Camera_MediaCaptured" />
            </Border>
            <Label
                Text="{Binding Story.Title}"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />
            <Border HeightRequest="200" BackgroundColor="WhiteSmoke" 
                    StrokeShape="RoundRectangle 10" Padding="12">
                <ScrollView>
                    <Label Text="{Binding Story.Content}"></Label>
                </ScrollView>
            </Border>
            <ImageButton
                Source="book.png"
                Style="{StaticResource RoundImageButton}"
                Clicked="ImageButton_Clicked"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
