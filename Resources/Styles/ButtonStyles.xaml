<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Story_Teller.Resources.Styles.ButtonStyles">

    <Style x:Key="BaseImageButton" TargetType="ImageButton">
        <Setter Property="BorderWidth" Value="2" />
        <Setter Property="Aspect" Value="AspectFit" />
        <Setter Property="BackgroundColor" Value="White" />
        <Setter Property="BorderColor" Value="WhiteSmoke" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup Name="CommonStates">
                    <VisualState Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="#f0f0f0" />
                            <Setter Property="Scale" Value="0.93" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState Name="Normal">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="White" />
                            <Setter Property="Scale" Value="1" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style x:Key="CircleImageButton" TargetType="ImageButton" BasedOn="{StaticResource BaseImageButton}">
        <Setter Property="Padding" Value="10" />
        <Setter Property="CornerRadius" Value="60" />
    </Style>

    <Style x:Key="RoundedImageButton" TargetType="ImageButton" BasedOn="{StaticResource BaseImageButton}">
        <Setter Property="Padding" Value="5" />
        <Setter Property="CornerRadius" Value="10" />
    </Style>

    <Style x:Key="SmallBaseImageButton" TargetType="ImageButton">
        <Setter Property="BorderWidth" Value="2" />
        <Setter Property="Aspect" Value="AspectFit" />
        <Setter Property="BackgroundColor" Value="White" />
        <Setter Property="BorderColor" Value="WhiteSmoke" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup Name="CommonStates">
                    <VisualState Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="#f0f0f0" />
                            <Setter Property="Scale" Value="0.67" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState Name="Normal">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="White" />
                            <Setter Property="Scale" Value="0.7" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style x:Key="SmallCircleImageButton" TargetType="ImageButton" BasedOn="{StaticResource SmallBaseImageButton}">
        <Setter Property="Padding" Value="10" />
        <Setter Property="CornerRadius" Value="60" />
    </Style>

    <Style x:Key="SmallRoundedImageButton" TargetType="ImageButton" BasedOn="{StaticResource SmallBaseImageButton}">
        <Setter Property="Padding" Value="5" />
        <Setter Property="CornerRadius" Value="10" />
    </Style>

    <Style x:Key="BaseButton" TargetType="Button">
        <Setter Property="BorderWidth" Value="2" />
        <Setter Property="BackgroundColor" Value="White" />
        <Setter Property="BorderColor" Value="WhiteSmoke" />
        <Setter Property="TextColor" Value="Black" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup Name="CommonStates">
                    <VisualState Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="#f0f0f0" />
                            <Setter Property="Scale" Value="0.93" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState Name="Normal">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="White" />
                            <Setter Property="Scale" Value="1" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style x:Key="RoundedButton" TargetType="Button" BasedOn="{StaticResource BaseButton}">
        <Setter Property="Padding" Value="5" />
        <Setter Property="CornerRadius" Value="10" />
    </Style>
</ResourceDictionary>